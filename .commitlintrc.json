{
  "extends": ["@commitlint/config-angular"],
  "rules": {
    "scope-case": [2, "always", "pascal-case"],
    "type-enum": [
      2,
      "always",
      [
        "build",
        "chore",
        "ci",
        "docs",
        "feat",
        "fix",
        "refactor",
        "revert",
        "test",
        "types",
        "workflow"
      ]
    ]
  }
}
