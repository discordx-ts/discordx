{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  }
}
